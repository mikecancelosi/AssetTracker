<Window x:Class="AssetTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssetTracker"
        xmlns:View="clr-namespace:AssetTracker.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid Background="White">
        <Grid.Resources>
            <Style x:Key="NavText"
                   TargetType="{x:Type Button}">
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="Margin"
                        Value="10, 0" />
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
                <Setter Property="Padding"
                        Value="10" />
            </Style>
        </Grid.Resources>


        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>

        <Grid x:Name="Header"
              Grid.Row="0"
              Margin="5">

            <StackPanel Orientation="Horizontal">
                <Image x:Name="AppLogo"
                       Source="Images/Placeholder.jpg"
                       Grid.Column="0"
                       Width="150"
                       HorizontalAlignment="Left" />

                <StackPanel x:Name="Nav"
                            Orientation="Horizontal"
                            Margin="50,0"
                            VerticalAlignment="Center">
                    <StackPanel.Resources>
                        <Style BasedOn="{StaticResource NavText}"
                               TargetType="Button">
                        </Style>
                    </StackPanel.Resources>
                    <Button Content="Asset List"
                            Click="NavigateToAssetList" />
                    <Button Content="Project Status" 
                            Click="NavigateToProjectStatus" />
                    <Button Content="Settings" Click="NavigateToSettings" />
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right">

                <TextBlock Text="First Name Last Name"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />

                <Image x:Name="UserLogo"
                       Source="Images/Placeholder.jpg"
                       Grid.Column="0"
                       Width="25"
                       Height="25"
                       Stretch="Fill"
                       Margin="10,0" />



            </StackPanel>

        </Grid>

        <Frame x:Name="ContentFrame" Grid.Row="1" Margin="200,0" NavigationUIVisibility="Hidden">
            
        </Frame>
        

    </Grid>
</Window>
