<Page x:Class="AssetTracker.View.AssetList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AssetTracker.View"
      xmlns:viewmodel="clr-namespace:AssetTracker.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AssetList"
      ShowsNavigationUI="False">

    <Grid Background="Black">

        <Grid x:Name="AssetList_Content">
            <Grid.DataContext>
                <viewmodel:AssetListViewModel />
            </Grid.DataContext>
            <ListView Name="MainGrid"
                      VerticalAlignment="Top"
                      ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                      ItemsSource="{Binding Assets}">
                <ListView.Resources>
                    <Style TargetType="{x:Type GridViewColumnHeader}">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Left" />
                        <Setter Property="Padding"
                                Value="6,0" />
                        <Setter Property="FontSize"
                                Value="14" />
                        <Setter Property="FontWeight"
                                Value="Medium" />
                    </Style>
                </ListView.Resources>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID"
                                        Width="100"
                                        DisplayMemberBinding="{Binding as_id}" />
                        <GridViewColumn Header="Name"
                                        Width="300"
                                        DisplayMemberBinding="{Binding as_displayname}" />
                        <GridViewColumn Header="Description"
                                        Width="200"
                                        DisplayMemberBinding="{Binding as_description}" />
                        <GridViewColumn Header="Phase"
                                        Width="200"
                                        DisplayMemberBinding="{Binding Phase.ph_name}" />
                        <GridViewColumn Header="Category"
                                        Width="200"
                                        DisplayMemberBinding="{Binding AssetCategory.ca_name}" />
                    </GridView>
                </ListView.View>

            </ListView>
            <Button VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="20"
                    Height="50"
                    Width="100"
                    Content="Add Item"
                    Click="AddItem_Click" />
        </Grid>

        <Grid x:Name="AddAssetContainer"
              Grid.RowSpan="2">
            <local:AssetCreate x:Name="AssetCreateControl"
                               Visibility="Hidden"
                               Width="800" />
        </Grid>

    </Grid>
</Page>
