<UserControl x:Class="AssetTracker.View.AssetList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AssetTracker.View"
             xmlns:viewmodel="clr-namespace:AssetTracker.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="880"
             d:DesignWidth="1920">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="50" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <Grid Name="Header"
              Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="Column_ID"
                                  Width=".5*" />
                <ColumnDefinition x:Name="Column_Name"
                                  Width="3*" />
                <ColumnDefinition x:Name="Column_Stage"
                                  Width="2.5*" />
                <ColumnDefinition x:Name="Column_Source"
                                  Width="2*" />
                <ColumnDefinition x:Name="Column_Category"
                                  Width="1*" />
            </Grid.ColumnDefinitions>
            <Label FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Content="Id"
                   Foreground="White"
                   Grid.Column="0" />
            <Label FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Content="Name"
                   Foreground="White"
                   Grid.Column="1" />
            <Label FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Content="Stage"
                   Foreground="White"
                   Grid.Column="2" />
            <Label FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Content="Source"
                   Foreground="White"
                   Grid.Column="3" />
            <Label FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Content="Category"
                   Foreground="White"
                   Grid.Column="4" />
        </Grid>
        <Grid x:Name="AssetList_Content"
              Grid.Row="1">
            <Grid.DataContext>
                <viewmodel:AssetListViewModel />
            </Grid.DataContext>
            <ListView Name="MainGrid"
                     VerticalAlignment="Top"
                     ItemsSource="{Binding Assets}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{Binding Width, ElementName=Column_ID}" />
                                <ColumnDefinition Width="{Binding Width, ElementName=Column_Name}" />
                                <ColumnDefinition Width="{Binding Width, ElementName=Column_Stage}" />
                                <ColumnDefinition Width="{Binding Width, ElementName=Column_Source}" />
                                <ColumnDefinition Width="{Binding Width, ElementName=Column_Category}" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding ID}"
                                       Grid.Column="0" />
                            <TextBlock Text="{Binding Name}"
                                       Grid.Column="1" />
                            <TextBlock Text="{Binding Stage}"
                                       Grid.Column="2" />
                            <TextBlock Text="{Binding Source}"
                                       Grid.Column="3" />
                            <TextBlock Text="{Binding Category}"
                                       Grid.Column="4" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="20"
                    Height="50"
                    Width="100"
                    Content="Add Item"
                    Click="AddItem_Click" />
        </Grid>
        
        <Grid x:Name="AddAssetContainer" Grid.RowSpan="2">
            <local:AssetCreate x:Name="AssetCreateControl"
                               Visibility="Hidden"
                               Width="800"/>
        </Grid>

    </Grid>
</UserControl>
