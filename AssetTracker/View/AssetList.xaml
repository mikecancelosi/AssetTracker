<Page x:Class="AssetTracker.View.AssetList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AssetTracker.View"
      xmlns:viewmodel="clr-namespace:AssetTracker.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AssetList"
      ShowsNavigationUI="False">

    <Grid Background="Black">

        <StackPanel x:Name="AssetList_Content" Margin="100,50,100,10">
            <StackPanel.DataContext>
                <viewmodel:AssetListViewModel />
            </StackPanel.DataContext>
            <Grid Margin="0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <StackPanel Orientation="Vertical" Margin="0,0,15,0" MouseLeftButtonUp="AddAsset_Click">
                        <Image Source="../Images/MaterialDesign/baseline_add_white_48dp.png" Height="40" />
                        <TextBlock Text="Add" Foreground="White" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical"
                                MouseLeftButtonUp="RemoveAsset_Click">
                        <Image Source="../Images/MaterialDesign/baseline_close_white_48dp.png"
                               Height="40" />
                        <TextBlock Text="Delete"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="Bold" />
                    </StackPanel>
                </StackPanel>
                <local:Searchbox HorizontalAlignment="Right" Width="400" Height="24" VerticalAlignment="Center"/>
            </Grid>
            <ListView Name="MainGrid"
                      VerticalAlignment="Top"
                      ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                      ItemsSource="{Binding Assets}" BorderThickness="0">
                <ListView.Resources>
                    <Style TargetType="{x:Type GridViewColumnHeader}">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Left" />
                        <Setter Property="Padding"
                                Value="6,0" />
                        <Setter Property="FontSize"
                                Value="14" />
                        <Setter Property="FontWeight"
                                Value="Medium" />
                        <Setter Property="Background"
                                Value="White" />
                        <Setter Property="BorderBrush"
                                Value="Black" />
                        <Setter Property="BorderThickness"
                                Value="0,0,0,5" />
                        <Setter Property="Height"
                                Value="50" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background"
                                        Value="White" />
                                <Setter Property="BorderBrush"
                                        Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style TargetType="{x:Type ListViewItem}">
                        <EventSetter Event="MouseDoubleClick"
                                     Handler="ListViewItem_MouseDoubleClick" />
                        <Setter Property="BorderThickness"
                                Value="0,0,0,2" />
                        <Setter Property="BorderBrush"
                                Value="Black" />
                        <Setter Property="Height"
                                Value="50" />
                        <Setter Property="FontWeight"
                                Value="SemiBold" />
                        <Setter Property="FontSize"
                                Value="14" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="White" />
                                <Setter Property="BorderBrush"
                                        Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Resources>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID"
                                        Width="100"
                                        DisplayMemberBinding="{Binding as_id}" />
                        <GridViewColumn Header="Name"
                                        Width="300"
                                        DisplayMemberBinding="{Binding as_displayname}" />
                        <GridViewColumn Header="Description"
                                        Width="200"
                                        DisplayMemberBinding="{Binding as_description}" />
                        <GridViewColumn Header="Phase"
                                        Width="200"
                                        DisplayMemberBinding="{Binding Phase.ph_name}" />
                        <GridViewColumn Header="Category"
                                        Width="200"
                                        DisplayMemberBinding="{Binding AssetCategory.ca_name}" />
                    </GridView>

                </ListView.View>
            </ListView>            
        </StackPanel>
        
        <local:AssetCreate x:Name="AssetCreateControl"
                               Visibility="Hidden"
                               Width="800" Height="400"/>

    </Grid>
</Page>
