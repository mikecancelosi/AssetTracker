<UserControl x:Class="AssetTracker.View.ProductionTimeline"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AssetTracker.View"
             mc:Ignorable="d"
             d:DesignWidth="800">
    <StackPanel Orientation="Vertical">

        <Grid x:Name="Header">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <TextBlock Text="Latest Version Found At: "
                           Foreground="White" />
                <TextBlock Text="LINKPLACEHOLDER"
                           Foreground="White" />

            </StackPanel>

        </Grid>

        <Grid Name="Timeline" Margin="0,10" Background="GhostWhite" Height="150">

            <TextBlock Text="FUNCTIONALITY NOT IMPLEMENTED"
                       Foreground="Black" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </Grid>



    </StackPanel>
</UserControl>
