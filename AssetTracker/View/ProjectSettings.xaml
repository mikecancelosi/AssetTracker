<Page x:Class="AssetTracker.View.ProjectSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AssetTracker.View"
      xmlns:viewmodel="clr-namespace:AssetTracker.ViewModel"
      mc:Ignorable="d"
      d:DesignHeight="900"
      d:DesignWidth="1500"
      Title="ProjectSettings"
      Background="AntiqueWhite"
      ShowsNavigationUI="False">
    <Page.DataContext>
        <viewmodel:ProjectSettingsViewModel />
    </Page.DataContext>

    <Grid Margin="100,30">
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
        </Grid.Resources>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical"
                    x:Name="Navigation">
            <StackPanel.Resources>

                <Style TargetType="{x:Type RadioButton}">
                    <Setter Property="Focusable"
                            Value="False" />
                    <Setter Property="GroupName"
                            Value="filter" />
                    <Setter Property="IsTabStop"
                            Value="False" />
                    <Setter Property="VerticalAlignment"
                            Value="Center" />
                    <Setter Property="HorizontalAlignment"
                            Value="Stretch" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type RadioButton}">
                                <ControlTemplate.Resources>

                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="VerticalAlignment"
                                                Value="Center" />
                                        <Setter Property="HorizontalAlignment"
                                                Value="Left" />
                                    </Style>

                                </ControlTemplate.Resources>
                                <Border x:Name="PART_border"
                                        BorderThickness="0"
                                        Padding="10"
                                        Background="FloralWhite">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center">
                                        <ContentPresenter x:Name="PART_content" />
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked"
                                             Value="True">
                                        <Setter TargetName="PART_content"
                                                Property="TextBlock.FontWeight"
                                                Value="Bold" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

            </StackPanel.Resources>

            <Expander Header="User Management"
                      Background="FloralWhite">
                <StackPanel Margin="30,0">
                    <RadioButton x:Name="UsersBtn"
                                 Content="Users" />
                    <RadioButton x:Name="RolesBtn"
                                 Content="Roles" />
                </StackPanel>
            </Expander>
            <RadioButton x:Name="CategoriesBtn"
                         Content="Category" />
        </StackPanel>

        <Grid Grid.Column="1"
              Margin="50,0">

            <StackPanel x:Name="Users"
                        Orientation="Vertical"
                        Visibility="{Binding ElementName=UsersBtn, Path=IsChecked,Converter={StaticResource BoolToVis}}">

                <TextBlock Text="Users"
                           FontSize="24" />

                <Grid Margin="0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBox Text="Search.." />
                    <Button Grid.Column="1"
                            HorizontalAlignment="Right"
                            Content="+ Add User" />
                </Grid>

                <Grid x:Name="UserList">
                    <Grid.DataContext>
                        <viewmodel:ProjectSettingsViewModel />
                    </Grid.DataContext>
                    <ListView VerticalAlignment="Top"
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                              ItemsSource="{Binding Users}">
                        <ListView.Resources>
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Left" />
                                <Setter Property="Padding"
                                        Value="6,0" />
                                <Setter Property="FontSize"
                                        Value="14" />
                                <Setter Property="FontWeight"
                                        Value="Medium" />
                            </Style>
                        </ListView.Resources>

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID"
                                                Width="100"
                                                DisplayMemberBinding="{Binding us_id}" />
                                <GridViewColumn Header="Name"
                                                Width="300"
                                                DisplayMemberBinding="{Binding us_displayname}" />
                                <GridViewColumn Header="Role"
                                                Width="200"
                                                DisplayMemberBinding="{Binding SecRole.ro_name}" />

                            </GridView>
                        </ListView.View>

                    </ListView>
                </Grid>

            </StackPanel>
            <StackPanel x:Name="Roles"
                        Orientation="Vertical"
                        Visibility="{Binding ElementName=RolesBtn, Path=IsChecked,Converter={StaticResource BoolToVis}}">

                <TextBlock Text="Roles"
                           FontSize="24" />

                <Grid Margin="0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBox Text="Search.." />
                    <Button Grid.Column="1"
                            HorizontalAlignment="Right"
                            Content="+ Add Role" />
                </Grid>

                <Grid x:Name="RolesList">
                    <Grid.DataContext>
                        <viewmodel:ProjectSettingsViewModel />
                    </Grid.DataContext>
                    <ListView VerticalAlignment="Top"
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                              ItemsSource="{Binding Roles}">
                        <ListView.Resources>
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Left" />
                                <Setter Property="Padding"
                                        Value="6,0" />
                                <Setter Property="FontSize"
                                        Value="14" />
                                <Setter Property="FontWeight"
                                        Value="Medium" />
                            </Style>
                        </ListView.Resources>

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID"
                                                Width="100"
                                                DisplayMemberBinding="{Binding ro_id}" />
                                <GridViewColumn Header="Name"
                                                Width="300"
                                                DisplayMemberBinding="{Binding ro_name}" />

                            </GridView>
                        </ListView.View>

                    </ListView>
                </Grid>

            </StackPanel>
            <StackPanel x:Name="Category"
                        Orientation="Vertical"
                        Visibility="{Binding ElementName=CategoriesBtn, Path=IsChecked,Converter={StaticResource BoolToVis}}">

                <TextBlock Text="Categories"
                           FontSize="24" />

                <Grid Margin="0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <TextBox Text="Search.." />
                    <Button Grid.Column="1"
                            HorizontalAlignment="Right"
                            Content="+ Add Category"
                            Click="AddCategoryClicked" />
                </Grid>

                <Grid x:Name="CategoryList">
                    <Grid.DataContext>
                        <viewmodel:ProjectSettingsViewModel />
                    </Grid.DataContext>
                    <ListView VerticalAlignment="Top"
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                              ItemsSource="{Binding Categories}">
                        <ListView.Resources>
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Left" />
                                <Setter Property="Padding"
                                        Value="6,0" />
                                <Setter Property="FontSize"
                                        Value="14" />
                                <Setter Property="FontWeight"
                                        Value="Medium" />
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID"
                                                Width="100"
                                                DisplayMemberBinding="{Binding ca_id}" />
                                <GridViewColumn Header="Name"
                                                Width="300"
                                                DisplayMemberBinding="{Binding ca_name}" />

                            </GridView>
                        </ListView.View>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <EventSetter Event="MouseDoubleClick"
                                             Handler="CategoryListItem_Clicked" />
                            </Style>
                        </ListView.ItemContainerStyle>

                    </ListView>
                </Grid>

            </StackPanel>

            <Border  x:Name="AddCategoryControl" 
                     Padding="10"
                    Background="Gray"                   
                    Visibility="Collapsed">
                <StackPanel Orientation="Vertical">

                    <TextBlock x:Name="CategoryEditorHeaderText"
                               Text="New Category"
                               FontSize="24"
                               Margin="0,0,0,10" />

                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <TextBlock Text="Category Name" />
                        <TextBox Width="300"
                                 Text="{Binding CurrentCategoryInst.ca_name}" />
                    </StackPanel>

                    <TextBlock Text="Phases"
                               FontSize="20"
                               Margin="0,0,0,10" />

                    <ItemsControl ItemsSource="{Binding CurrentPhases}"
                                  x:Name="PhaseListControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"
                                            Margin="10" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            Grid.Column="1"
                                            Margin="0,0,0,5">
                                    <StackPanel.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="Width"
                                                    Value="20" />
                                            <Setter Property="Height"
                                                    Value="20" />
                                        </Style>
                                    </StackPanel.Resources>

                                    <TextBlock Margin="0,0,5,0"
                                               VerticalAlignment="Center">
                                        <Run Text="{Binding ph_step}" />
                                        <Run Text="." />
                                    </TextBlock>
                                    <TextBox Text="{Binding ph_name}"
                                             MinWidth="200" />
                                    <Button Click="PhaseMoveUpClicked"
                                            CommandParameter="{Binding ph_step}">
                                        <Image Source="/Images/MaterialDesign/baseline_arrow_upward_white_48dp.png" />
                                    </Button>
                                    <Button Click="PhaseMoveDownClicked"
                                            CommandParameter="{Binding ph_step}">
                                        <Image Source="/Images/MaterialDesign/baseline_arrow_downward_white_48dp.png" />
                                    </Button>
                                    <Button Click="DeletePhaseClicked"
                                            CommandParameter="{Binding ph_step}">
                                        <Image Source="/Images/MaterialDesign/baseline_delete_white_48dp.png" />
                                    </Button>

                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/MaterialDesign/baseline_add_white_48dp.png"
                               Width="20" />
                        <Button Content="Add Phase"
                                Click="AddPhaseClicked" />
                    </StackPanel>

                    <Button Content="Save"
                            Click="SaveCategoryClicked" />

                    <Button Content="Cancel"
                            Click="ExitCategoryClicked" />

                </StackPanel>
            </Border>

        </Grid>

    </Grid>
</Page>
