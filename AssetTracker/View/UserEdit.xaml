<Page x:Class="AssetTracker.View.UserEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AssetTracker.View"
      xmlns:viewmodel="clr-namespace:AssetTracker.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserEdit">

    <Page.DataContext>
        <viewmodel:UserEditViewModel />
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <ResourceDictionary.MergedDictionaries>              
                <ResourceDictionary x:Name="ProjectSettingsDictionary"
                                    Source="Resources/ProjectSettingsResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>


        </ResourceDictionary>

    </Page.Resources>
    <Grid Margin="100,30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"
                              MaxWidth="300" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="LeftPanel" Background="Gray">
            <StackPanel Margin="20,50">
            <TextBlock Text="User Edit"
                       Foreground="Black"
                       FontSize="24"
                       FontWeight="Bold" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Mike Cancelosi" Margin="0,0,10,0" />
                    <TextBlock Text="#1302"
                               Foreground="LightGray" />
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="20,150">
                <RadioButton x:Name="UserSetupNav"
                             Content="User Setup"
                             GroupName="SubNav" Style="{StaticResource SubNavRadio}" IsChecked="True" />
                <RadioButton x:Name="PermissionsNav"
                             Content="Permissions"
                             GroupName="SubNav"
                             Style="{StaticResource SubNavRadio}" Margin="0,10" />
            </StackPanel>
        </Grid>
        <Grid x:Name="RightPanel" Grid.Column="1" Margin="50,0" Background="Gray">

            <Grid x:Name="UserSetup"
                  Margin="50"
                  Visibility="{Binding ElementName=UserSetupNav, Path=IsChecked,Converter={StaticResource BoolToVis}}">
                <Grid.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="Width"
                                Value="200" />
                        <Setter Property="Margin"
                                Value="0,5" />
                        <Setter Property="HorizontalAlignment"
                                Value="Left" />
                    </Style>
                </Grid.Resources>
                <TextBlock Text="Setup information"
                           FontSize="16" FontWeight="SemiBold" />
                <WrapPanel Margin="0,40"  Orientation="Vertical">
                    <StackPanel Margin="0,0,10,10">
                        <TextBlock Text="First Name" />
                        <TextBox Text="{Binding CurrentUser.us_fname}"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,10,10">
                        <TextBlock Text="Last Name" />
                        <TextBox Text="{Binding CurrentUser.us_lname}" />
                    </StackPanel>
                    <StackPanel Margin="0,0,10,10">
                        <TextBlock Text="Display Name" />
                        <TextBox Text="{Binding CurrentUser.us_displayname}" />
                    </StackPanel>
                    <StackPanel Margin="0,0,10,10">
                        <TextBlock Text="Email" />
                        <TextBox Text="{Binding CurrentUser.us_email}" />
                    </StackPanel>
                    <StackPanel Margin="0,0,10,10">
                        <TextBlock Text="Role" />
                        <local:Searchbox Width="300"/>
                    </StackPanel>
                </WrapPanel>

            </Grid>
            <Grid x:Name="Permissions"
                  Margin="50"
                  Visibility="{Binding ElementName=PermissionsNav, Path=IsChecked,Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Modify Permissions"
                           FontSize="16"
                           FontWeight="SemiBold" />
            </Grid>
        </Grid>
    </Grid>
</Page>
